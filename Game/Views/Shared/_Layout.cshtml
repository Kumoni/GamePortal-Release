<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Game Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="site-header">
        <div class="container">
            <div class="text-center py-4">
                <h1 class="game-title">Game Portal</h1>
                <p class="game-subtitle">Погрузись в мир приключений</p>
            </div>
        </div>
    </header>

    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-fill"></i> Главная
                        </a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-gear-fill"></i> Управление
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Players" asp-action="Index">
                                        <i class="bi bi-people-fill"></i> Игроки
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Characters" asp-action="Index">
                                        <i class="bi bi-person-badge"></i> Персонажи
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Levels" asp-action="Index">
                                        <i class="bi bi-map-fill"></i> Уровни
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">
                            <i class="bi bi-info-circle-fill"></i> О сайте
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact">
                            <i class="bi bi-envelope-fill"></i> Контакты
                        </a>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <main role="main" class="py-4">
        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="container text-center py-3">
            <p class="mb-0">&copy; @DateTime.Now.Year Game Portal. Все права защищены.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>