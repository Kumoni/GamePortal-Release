@model IEnumerable<Game.Models.Player>

@{
    ViewData["Title"] = "Игроки";
}

<div class="container-fluid py-4">
    <div class="card shadow">
        <div class="card-header bg-primary bg-gradient text-white d-flex justify-content-between align-items-center">
            <h2 class="h4 mb-0">Игроки</h2>
            <a asp-action="Create" class="btn btn-light">
                <i class="bi bi-plus-circle"></i> Создать нового
            </a>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="mb-4">
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-search"></i>
                            </span>
                            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" 
                                   class="form-control" placeholder="Поиск по имени" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="input-group">
                            <span class="input-group-text">От</span>
                            <input type="date" name="dateFrom" value="@ViewData["DateFrom"]" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="input-group">
                            <span class="input-group-text">До</span>
                            <input type="date" name="dateTo" value="@ViewData["DateTo"]" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i> Поиск
                        </button>
                    </div>
                </div>
            </form>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParam"]">
                                @Html.DisplayNameFor(model => model.Name)
                            </a>
                        </th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParam"]">
                                @Html.DisplayNameFor(model => model.RegistrationDate)
                            </a>
                        </th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.RegistrationDate)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>